<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.hibernate" level="ERROR" />
    <logger name="org.hibernate.SQL" level="ERROR" />
    <logger name="org.hibernate.type" level="ERROR" />
    <logger name="org.hibernate.engine.jdbc" level="ERROR" />
    <logger name="org.hibernate.cache" level="ERROR" />
    <logger name="org.hibernate.transaction" level="ERROR" />
    <logger name="org.hibernate.jpa" level="ERROR" />
    <logger name="org.hibernate.Version" level="ERROR" />
    <logger name="com.mysql.jdbc" level="ERROR" />
</configuration>